{
  "name": "boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo --no-daemon && exit 0",
    "dev": "turbo run dev",
    "start:dev:admin": "turbo run start:dev --filter=admin... --concurrency=100",
    "start:dev:backend": "turbo run start:dev --filter=backend... --concurrency=100",
    "lint:check": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{mjs,js,jsx,ts,tsx,json}\"",
    "format:fix": "prettier --write \"**/*.{mjs,js,jsx,ts,tsx,json}\"",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "@typescript-plane-boilerplate/tsconfig": "workspace:*",
    "@eslint/js": "9.18.0",
    "@types/eslint": "9.6.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.10",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.21.0",
    "@typescript-eslint/parser": "8.21.0",
    "@typescript-eslint/utils": "8.21.0",
    "concurrently": "9.1.2",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-prettier": "5.2.5",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.1.0",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.4.3",
    "nodemon": "3.1.9",
    "npm-run-all2": "7.0.2",
    "prettier": "3.4.2",
    "react": "18.3.1",
    "rimraf": "6.0.1",
    "serve": "14.2.4",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "turbo": "2.4.4",
    "typescript": "5.7.3",
    "typescript-eslint": "8.21.0",
    "wait-on": "8.0.3",
    "tsup": "8.4.0"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{.ts,tsx}": [
      "eslint --fix -c ./.eslintrc.json",
      "git add"
    ]
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": "22",
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=9.6.0"
  }
}
